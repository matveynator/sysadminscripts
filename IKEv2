cat > /etc/cron.daily/certbot.sh <<EOF
#!/bin/bash
/usr/local/bin/certbot-auto renew --quiet --no-self-upgrade --post-hook "/etc/init.d/ipsec reload"
EOF
chmod +x /etc/cron.daily/certbot.sh

cat > /etc/ipsec.conf <<EOF
config setup
        
        uniqueids=no
        

conn %default

        dpdaction=clear
        dpddelay=35s
        dpdtimeout=2000s
        keyexchange=ikev2
        auto=add
        rekey=no
        reauth=no
        fragmentation=yes

        # left - local (server) side
        leftcert=/etc/ipsec.d/certs/cert.pem
        leftsendcert=always
        leftsubnet=0.0.0.0/0

        # right - remote (client) side
        eap_identity=%identity
        rightsourceip=${lan}
        rightdns=8.8.8.8

#Windows and BlackBerry clients
conn ikev2-mschapv2
        rightauth=eap-mschapv2

#Apple clients
conn ikev2-mschapv2-apple
        rightauth=eap-mschapv2
        leftid=${domain}
EOF


cat > /etc/ipsec.secrets <<EOF
include /var/lib/strongswan/ipsec.secrets.inc
: RSA /etc/ipsec.d/certs/privkey.pem

${user_name} : EAP "${user_pass}"
EOF

cat /etc/letsencrypt/live/${domain}/cert.pem > /etc/ipsec.d/certs/cert.pem
cat /etc/letsencrypt/live/${domain}/privkey.pem > /etc/ipsec.d/certs/privkey.pem


echo ""
echo "====================================================================="
echo "$lan activated?"
echo "Proceeding to iptables config... CTRL+C to abort, any key to continue"
read t


iptables -t nat -A POSTROUTING -s $lan ! -d $lan -j MASQUERADE
iptables -t nat -A POSTROUTING -s $lan -o eth0 -m policy --dir out --pol ipsec -j ACCEPT
iptables -t mangle -A FORWARD -p tcp -m tcp --tcp-flags SYN,RST SYN -m tcpmss --mss 1201:1536 -j TCPMSS --set-mss 1200
iptables -t mangle -I FORWARD -p tcp -m policy --pol ipsec --dir in --syn -m tcpmss --mss 1201:1536 -j TCPMSS --set-mss 1200
iptables -t mangle -I FORWARD -p tcp -m policy --pol ipsec --dir out --syn -m tcpmss --mss 1201:1536 -j TCPMSS --set-mss 1200
iptables -A INPUT -p UDP --dport 500 -j ACCEPT
iptables -A INPUT -p UDP --dport 4500 -j ACCEPT
iptables -A INPUT -p TCP --dport 80 -j ACCEPT
iptables -A INPUT -p ESP -j ACCEPT
iptables -A INPUT -p 50 -j ACCEPT
iptables -A INPUT -p 51 -j ACCEPT
iptables -I INPUT -m policy --dir in --pol ipsec --proto esp -j ACCEPT
iptables -I FORWARD -m policy --dir in --pol ipsec --proto esp -j ACCEPT
iptables -I FORWARD -m policy --dir out --pol ipsec --proto esp -j ACCEPT
iptables -I OUTPUT -m policy --dir out --pol ipsec --proto esp -j ACCEPT

ip6tables -t mangle -A FORWARD -p tcp -m tcp --tcp-flags SYN,RST SYN -m tcpmss --mss 1201:1536 -j TCPMSS --set-mss 1200
ip6tables -t mangle -I FORWARD -p tcp -m policy --pol ipsec --dir in --syn -m tcpmss --mss 1201:1536 -j TCPMSS --set-mss 1200
ip6tables -t mangle -I FORWARD -p tcp -m policy --pol ipsec --dir out --syn -m tcpmss --mss 1201:1536 -j TCPMSS --set-mss 1200

echo 1 > /proc/sys/net/ipv4/ip_forward
echo 1 >/proc/sys/net/ipv4/ip_no_pmtu_disc

echo "net.ipv4.ip_no_pmtu_disc = 1" >> /etc/sysctl.conf
echo "net.ipv4.ip_forward = 1" >> /etc/sysctl.conf
echo "net.ipv4.ip_forward_use_pmtu = 0" >> /etc/sysctl.conf

sysctl -p

iptables-save > /tmp/iptables


cat <<EOF

FINISHED.
Temporary iptables rules saved to: /tmp/iptables
IKEv2 credentials to connect to this server:
============================================
host: ${domain}
user: ${user_name}
pass: ${user_pass}
vpn type: IKEv2
============================================
add more users at: /etc/ipsec.secrets

start up strongswan server in debug mode? CTRL+C to abort, any key to continue...

EOF

read

/usr/sbin/ipsec start --nofork
