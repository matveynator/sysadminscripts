#!/bin/bash
domain="vpn.domain.net"
lan="10.27.52.0/22"
user_name="user"
contact_email="security@domain.net"


apt-get update
apt-get install curl strongswan libstrongswan libcharon-extra-plugins pwgen

user_pass=`pwgen 20 1`

echo ""
echo "=========================================================="
echo "stongswan install ok? CTRL+C to abort, any key to continue"
echo "please OPEN HTTP port 80 for certbot to obtain certificates"
iptables -A INPUT -p TCP --dport 80 -j ACCEPT
echo "iptables -A INPUT -p TCP --dport 80 -j ACCEPT"
echo "HTTP OPENED OK"
read

cd /usr/local/bin
curl https://dl.eff.org/certbot-auto > /usr/local/bin/certbot-auto
chmod a+x /usr/local/bin/certbot-auto
certbot-auto certonly -m ${contact_email} --agree-tos -d ${domain} --standalone

echo ""
echo "===================================================="
echo "certbot ssl ok? CTRL+C to abort, any key to continue"
read t

cat > /etc/ipsec.d/cacerts/ca.crt <<EOF
